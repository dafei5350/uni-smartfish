  flex-direction: column;
  align-items: center;
  padding: 0 24rpx;
  margin: 30rpx 0 100rpx 0;
}
.container .body .list {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}
.container .body .list .item {
  width: 702rpx;
  height: auto;
  margin-top: 10rpx;
  border-radius: 20rpx;
  box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
  touch-action: pan-y;
}
.container .body .list .item .image .img-case {
  width: 702rpx;
  height: 358rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
