  margin-top: 24rpx;
  padding: 0 24rpx;
  display: flex;
  justify-content: space-between;
}
.container .body .list .item .title .text {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
}
.container .body .list .item .title .avatar {
  width: 272rpx;
  height: 52rpx;
  background: #f5f5f5;
  border-radius: 26rpx;
