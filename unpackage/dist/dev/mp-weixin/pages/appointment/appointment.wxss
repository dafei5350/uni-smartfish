  padding: 30rpx 24rpx;
  display: flex;
  justify-content: space-around;
}
.container .body .list .item .action view {
  display: flex;
  align-items: center;
}
.container .body .list .item .action view text {
  font-size: 20rpx;
  font-weight: 400;
  color: #999999;
  margin-left: 10rpx;
